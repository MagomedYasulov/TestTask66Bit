@{
    //Layout = null;
}

@section Styles {
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="~/css/interns.css">
}

@section Scripts {
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
}

<div class="container">
    <h2>Стажёры</h2>

    <!-- Фильтры -->
    <div class="filters">
        <div>
            <label for="filter-direction">Фильтр по направлению:</label>
            <select id="filter-direction">
                <option value="">Все направления</option>
            </select>
        </div>
        <div>
            <label for="filter-project">Фильтр по проекту:</label>
            <select id="filter-project">
                <option value="">Все проекты</option>
            </select>
        </div>
        <button id="clear-filters" class="btn btn-secondary">Сбросить фильтры</button>
    </div>

    <!-- Таблица стажёров -->
    <table id="interns-table" class="display">
        <thead>
            <tr>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>Пол</th>
                <th>Email</th>
                <th>Телефон</th>
                <th>Дата рождения</th>
                <th>Направление</th>
                <th>Проект</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

<!-- Модальное окно редактирования стажёра -->
<div id="modal-edit-overlay" class="modal-overlay">
    <div class="modal">
        <h3>Редактировать стажёра</h3>
        <form id="edit-form">
            <input type="hidden" id="edit-id" />

            <label for="edit-first-name">Имя</label>
            <input type="text" id="edit-first-name" name="firstName" required />

            <label for="edit-last-name">Фамилия</label>
            <input type="text" id="edit-last-name" name="lastName" required />

            <label for="edit-gender">Пол</label>
            <select id="edit-gender" name="gender" required>
                <option value="">Выберите пол</option>
                <option value="0">Мужской</option>
                <option value="1">Женский</option>
            </select>

            <label for="edit-email">Email</label>
            <input type="email" id="edit-email" name="email" required />

            <label for="edit-phone">Телефон</label>
            <input type="tel" id="edit-phone" name="phone" placeholder="+7XXXXXXXXXX" />

            <label for="edit-birthdate">Дата рождения</label>
            <input type="date" id="edit-birthdate" name="birthDate" required />

            <label for="edit-direction">Направление</label>
            <select id="edit-direction" name="internshipId" required>
                <option value="">Выберите направление</option>
            </select>

            <label for="edit-project">Текущий проект</label>
            <select id="edit-project" name="projectId" required>
                <option value="">Выберите проект</option>
            </select>

            <div class="error-detail" id="edit-error-detail"></div>

            <div class="modal-buttons">
                <button type="button" class="btn btn-secondary" id="cancel-edit">Отмена</button>
                <button type="submit" class="btn btn-primary" id="save-edit">Сохранить</button>
            </div>
        </form>
    </div>
</div>

<!-- Уведомление -->
<div id="notification" class="notification"></div>

<script src="~/js/interns.js"> </script>
